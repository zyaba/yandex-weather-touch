<div class="day_forecast_wrapper">
    <!--<span class="day_forecast__header">{{date}}</span>-->
    <h3 class="day_forecast__header">{{date}}</h3>
    {{#each parts}}
        <div class="day_forecast__row" style="background-color: {{colour}};">
            <div class="day_forecast__row_label left">{{timeOfDay}}</div>
            <div class="day_forecast__row_item">
                <img class="row_item__weather_icon left" src="http://ekb.shri14.ru/icons/{{weatherIcon}}.svg"/>
                <span class="row_item__temp">{{tempMin}}&nbsp;&nbsp;&nbsp;{{tempMax}}</span>
            </div>
        </div>
    {{/each}}
</div>